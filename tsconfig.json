{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@db/*": ["db/*"],
      "@schemas/*": ["schemas/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
